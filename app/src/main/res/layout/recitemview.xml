<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/whitecard"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/mycard1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hungry"
                android:id="@+id/restroimg"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mall Name here"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/mycard1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/name"
            android:maxLines="1"
            android:maxWidth="100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description here"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textStyle="italic"
            android:id="@+id/desc"
            android:maxLines="1"
            android:maxWidth="200dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 â­"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/mycard1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_bold"
            android:id="@+id/rating"
            android:maxLines="1"
            android:maxWidth="100dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rating"
            android:text="Location"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/location"
            android:maxLines="1"
            android:maxWidth="100dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/placeholder"
            app:layout_constraintTop_toTopOf="@+id/location"
            app:layout_constraintBottom_toBottomOf="@+id/location"
            app:layout_constraintRight_toLeftOf="@+id/location"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            android:text="Rs.500"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/desc"
            android:fontFamily="@font/poppins_black"
            android:id="@+id/price"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>